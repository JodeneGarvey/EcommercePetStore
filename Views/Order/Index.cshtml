@model IEnumerable<EcommercePetStore.Models.Order>

<h2>All Orders</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.Status</td>
                <td>@order.OrderItems.Sum(i => i.Price * i.Quantity).ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-4">
      <a href="@Url.Action("Index", "Administration")" class="btn btn-primary">Back</a>
</div>
