@model Product
@{
    ViewData["Title"] = "Product Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="/Products/@Model.ImageUrl" class="img-fluid rounded" alt="@Model.ProductName" />
        </div>
        <div class="col-md-7">
            <h2>@Model.ProductName</h2>
            <p class="text-muted">Price: <strong>$@Model.Price</strong></p>

            <form method="post" asp-action="AddToCart" asp-controller="Cart">
                <input type="hidden" name="productId" value="@Model.Id" />

                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" max="@Model.Quantity" class="form-control" style="width: 100px;" />
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-cart-plus me-2"></i>Add to Cart
                </button>
            </form>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-3">
                    @TempData["Message"]
                </div>
            }
        </div>
    </div>
</div>
