@model IEnumerable<EcommercePetStore.Models.Order>



<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You haven’t placed any orders yet.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Items</th>
                <th>Total</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.OrderItems.Count</td>
                    <td>$@order.OrderItems.Sum(i => i.Price * i.Quantity)</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-action="OrderConfirmation" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


