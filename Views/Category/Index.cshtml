@model List<Category>
@{
}


<h2 class="text-center mb-5">List of Pet Categories</h2>
<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Add New Product Category</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.CategoryName</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" 
                    asp-route-id="@category.Id">Edit</a>

                    <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" 
                    asp-route-id="@category.Id" onclick="return confirm('Are You Sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
