@model EcommercePetStore.ViewModels.CreateRoleViewModel

@{
   
    ViewBag.Title = "Create New Role";
}


<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Create Role</h2>

                <form asp-action="CreateRole" method="post">
                    <div class="mb-3">
                        <label asp-for="RoleName" class="form-label"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                    

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Create Role</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
